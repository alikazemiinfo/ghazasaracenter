<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_search"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/item_imgfood_main"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/sans"
        android:text="باقالی پلو با گوشت"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/size_H2"
        app:layout_constraintEnd_toStartOf="@+id/item_imgfood_main"
        app:layout_constraintTop_toTopOf="@+id/item_imgfood_main" />

    <TextView
        android:id="@+id/item_txt_foroshande"
        android:layout_width="185dp"
        android:paddingEnd="4dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yekan1"
        app:layout_constraintBottom_toTopOf="@+id/item_txt_gheymat"
        android:text="فروشنده : رستوران علی کاظمی"
        android:textColor="@color/gray"
        android:textSize="@dimen/size_H3"
        app:layout_constraintStart_toStartOf="@+id/item_txt_gheymat"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_title" />

    <TextView
        android:id="@+id/item_txt_gheymat"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/item_txt_fasele"
        android:fontFamily="@font/yekan1"
        android:text="قیمت : 120 هزار تومان"
        android:textColor="@color/gray"
        android:textSize="@dimen/size_H3"
        app:layout_constraintStart_toStartOf="@+id/item_txt_fasele"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_foroshande" />

    <TextView
        android:id="@+id/item_txt_fasele"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/yekan1"
        android:text="فاصله رستوران تا شما :2 کیلومتر"
        android:textColor="@color/gray"
        android:textSize="@dimen/size_H3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_txt_gheymat"
        app:layout_constraintEnd_toStartOf="@+id/item_imgfood_main"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_gheymat" />

    <RatingBar
        android:id="@+id/item_ratingbarasli"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="15dp"
        android:numStars="5"
        android:progressTint="@color/gold"
        android:rating="3.4"
        app:layout_constraintBottom_toBottomOf="@+id/item_imgfood_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_imgfood_main" />

    <TextView
        android:id="@+id/item_txt_emtiazrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="امتیاز 3.4 از 5"
        android:textSize="@dimen/size_H4"
        app:layout_constraintEnd_toEndOf="@+id/item_ratingbarasli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_ratingbarasli" />


</androidx.constraintlayout.widget.ConstraintLayout>