<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bk_top"
        android:elevation="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp">

            <ImageView


                android:id="@+id/btn_add_food"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                app:srcCompat="@drawable/ic_add" />
            <ImageView


                android:id="@+id/btn_account"
                android:layout_marginStart="49dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                app:srcCompat="@drawable/ic_sabtnam" />
            <TextView
                android:layout_marginStart="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/txt_namnamayeshi"
                android:fontFamily="@font/yekan1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_H4"/>
            <TextView
                android:layout_marginStart="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/txt_etebar"
                android:layout_marginTop="20dp"
                android:text=""
                android:fontFamily="@font/yekan1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_H4"/>

            <TextView

                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:fontFamily="@font/dima_shekasteh"
                android:text="@string/esm_farsi"
                android:textColor="@color/white"
                android:textSize="@dimen/size_H1" />

        </FrameLayout>

        <EditText

            android:id="@+id/edt_search"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_search"
            android:drawableStart="@drawable/ic_searchnahai"
            android:drawableTint="@color/abie_dark"
            android:hint="@string/search_hint"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:paddingBottom="8dp"
            android:textColorHint="@color/gray" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        tools:listitem="@layout/item_ajnas" />

</LinearLayout>